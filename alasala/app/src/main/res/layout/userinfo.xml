<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinfo"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/userdetailGoback"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/back_new_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="518dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="125dp"
        android:backgroundTint="#91C0FB"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Enter full name:"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameinfo"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            android:text="Enter Phone Number:"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneinfo"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:inputType="number"
            android:text=""
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="220dp"
            android:text="Enter House Number:"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/homeinfo"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="260dp"
            android:inputType="number"
            android:text=""
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="320dp"
            android:text="City:"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cityinfo"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="360dp"
            android:text=""
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/vica"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="430dp"
            android:text="Visa"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cash"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="460dp"
            android:text="Cash"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/order"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="21dp"
        android:backgroundTint="@color/blue"
        android:text="Request Now"
        android:textSize="20sp"
        android:onClick="sendRequest"/>

    <Button
        android:id="@+id/button_select_location"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:textColor="@color/white"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/blue"
        android:onClick="openMapActivity"
        android:text="Select Location"
        android:textSize="20sp" />

</RelativeLayout>
